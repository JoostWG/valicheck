{
    "name": "valicheck",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JoostWG/valicheck.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@types/jest": "^30.0.0",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "concurrently": "^9.2.1",
        "cspell": "^9.4.0",
        "dprint": "^0.51.1",
        "eslint": "^9.39.2",
        "eslint-plugin-check-file": "^3.3.1",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0"
    },
    "scripts": {
        "prepublish": "npm run build",
        "test": "jest",
        "build": "tsup ./src --dts --clean --minify --minify-whitespace --minify-identifiers --minify-syntax",
        "lint": "eslint . --fix --cache",
        "format": "dprint fmt",
        "type-check": "tsc --noEmit",
        "spell-check": "cspell",
        "quality": "concurrently -n ESLint,dprint,TypeScript,Jest,CSpell -c #3178C6,#4D5564,#4B32C3,#15C213,#B51A00 \"npm run lint\" \"npm run format\" \"npm run type-check\" \"npm test\" \"npm run spell-check -- --silent\" "
    },
    "version": "0.1.2"
}
